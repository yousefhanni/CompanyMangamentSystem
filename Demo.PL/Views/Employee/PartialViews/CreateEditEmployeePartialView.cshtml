@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork

@{
    var departments = new SelectList(await _unitOfWork.DepartmentRepository.GetAll(), nameof(Department.Id), nameof(Department.Name));

}


<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="IsActive"></label>
    <input class="form-control" asp-for="IsActive" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input class="form-control" asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" />
    <span asp-validation-for="HireDate" class="text-danger"></span>

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>

    <select class="form-control" asp-for="DepartmentId" asp-items="@departments">     @* asp-item =>(tag Helper)=>CLR Will Put  Options*@
   
        <option value="@null"> --- Select Department -- </option>
        @*CLR will create Options *@
    </select>
   

</div>


<div class="form-group">
  <label class="col-form-lable" asp-for="Image"></label>
  <input class="form-control-file" asp-for="Image"/>
</div>